{
  "name": "bgsi-hatching-helper",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "optimize:once": "node scripts/optimize-images.js",
    "optimize:watch": "node scripts/optimize-images.js --watch",
    "predev": "npm run optimize:once",
    "dev": "concurrently \"npm:optimize:watch\" \"vite\"",
    "prebuild": "npm run optimize:once",
    "build": "vite build",
    "prepreview": "npm run build",
    "preview": "vite preview",
    "deploy": "npm run build && node scripts/deploy.js"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "chokidar": "^4.0.3",
    "cli-progress": "^3.12.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "sharp": "^0.34.4",
    "ssh2-sftp-client": "^12.0.1",
    "svelte": "^5.38.10",
    "vite": "^7.1.6"
  },
  "dependencies": {
    "svelte-inview": "^4.0.4"
  }
}
